<div class="banner" style="background-image: linear-gradient(180deg, rgba(80,80,80,0.8) 70%, rgba(180,180,180,0.9) 90%), url('https://static.pexels.com/photos/371633/pexels-photo-371633.jpeg');">
  <div class="form-wrapper">
    <div class="form-title">
      <h2>Login</h2>
    </div>
    <div class="form-login-wrapper">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, label: "Senha", required: false %>
          <%= f.input :remember_me, label: "Mantenha-me conectado", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
    <div class="links">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
