<div class="container">
  <div class="form-title">
  <br>
   <h3>
      <%= link_to patient_path(@patient) do %>
        <%= @patient.full_name.capitalize %>, <%= @patient.age %>
      <% end %>
      <%= link_to edit_patient_path(@patient), class:'edit_link' do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
    </h3>
  </div>

  <p> Data: <%= date_format(@consult.consult_date) %></p>
  <p>
    <strong>Local:</strong> <%= @consult.place %> / <strong>CNES Unidade: </strong><%= @consult.unit_cnes %> / <strong>NÃºmero da equipe: </strong> <%= @consult.team_number %> / <strong>Turno:</strong> <%= @consult.turn %>
    <%= link_to edit_consult_path(@consult), class:'edit_link' do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
  </p>
  <br>

  <%= render 'soaps/form' %>
  <br>
  <% @soaps.each do |s| %>
    <strong><p><%= s.complaint  %></p></strong>
    <ul>
      <li><%= s.diagnosis %></li>
      <li><%= s.exams.reject{|e| e.blank? }.to_sentence %></li>
      <li><%= s.referring.reject{|e| e.blank? }.to_sentence %></li>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
      <% if @consult.soaps.count > 0 %>
        <%= link_to 'Encerrar', root_path, class:'btn btn-danger', id: 'large_btn' %>
      <% end %>
    </div>
  </div>
</div>

