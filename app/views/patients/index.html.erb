<div class="banner_search">
  <div>
    <h1 align="left" style="padding-bottom: 10px;"> Rápido e simples </h1>
  </div>
  <div>
    <h2 align="left"> Mais tempo com seus pacientes </h2>
  </div>
</div>
<div class="form_patient">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= form_tag patients_path, method: :get do %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-search"></i>
            </div>
            <%= text_field_tag 'term', params[:term], placeholder: " Nome do paciente ou Número SUS", class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <%= submit_tag 'Buscar', class: "btn btn-primary form-control" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @patients.each do |patient| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="card" >
        <%= link_to patient_path(patient) do %>
        <div class="card-content" style="background-color: #DFEAE6; padding: 10px; box-shadow: 0 1px 2px; color: gray">
          <div class="card-category"><%= patient.full_name %></div>
          <div class="card-description">
            <p><%= date_format(patient.birthday) %></p>
            <p><%= patient.sus_number %></p>
          </div>
        </div>
        <% end %>
        <div class="card-button">
          <%=
          link_to "Nova Consulta", patient_new_with_soap_path(patient), class: 'btn btn-success'
          %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>






