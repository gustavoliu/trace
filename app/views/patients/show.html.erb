<div class="container">
  <h1 style="text-align:center;">Ficha do Paciente</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="form-title">
        <br>
        <h2><%= @patient.full_name %>, <%= @patient.age %></h2>
        <p>Data de Nascimento: <%= @patient.birthday.strftime("%d/%m/%Y") %> </p>
        <p>Prontuário: <%= @patient.prontuario_number %></p>
        <p>Número SUS: <%= @patient.sus_number %></p>
        <p>Endereço: <%= @patient.address %></p>
        <br>
        <%= link_to 'Nova Consulta', patient_new_with_soap_path(@patient), class:'btn btn-success' %>
        <%= link_to 'Editar Dados', edit_patient_path(@patient), class:'btn btn-success' %>
      </div>
    </div>

    <div class="row col-md-8">
      <br>
      <h2 style="text-align:center;">Consultas realizadas:</h2>
      <% @patient.consults.order(consult_date: :desc).each do |consult| %>
        <div class="col-xs-12">
          <div class="card-show">
            <div class="card-header">
              <br>
            </div>
            <h4>Data: <%= consult.consult_date.strftime('%d/%m/%Y')%></h4>
            <div class="card-body">
              <ul class="list-group">
                <li>
                  Turno: <%= consult.turn %>
                </li>
                <% pro = Professional.find(consult.professional_id) %>
                <li>
                  Profissional: <%= pro.full_name %> (<%= pro.professional_number %>)
                </li>
                <br>
                <% consult.soaps.each do |soap| %>
                  <li><strong>S</strong>: <%= soap.complaint %></li>
                  <li><strong>A</strong>: <%= soap.diagnosis %></li>
                  <li><strong>Ex</strong>: <%= soap.exams %></li>
                  <li><strong>CD</strong>: <%= soap.referring %></li>
                  <br>
                  <a><%= link_to 'Editar SOAP', edit_consult_soap_path(soap.consult, soap), class: 'btn btn-success' %></a>
                <% end %>
                <a><%= link_to 'Editar Consulta', edit_consult_path(consult), class: 'btn btn-success' %></a>
                <br>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


