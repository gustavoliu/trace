<div class="container">
  <div class='row'>

    <h3>Complete seu cadastro:</h3>

      <%= simple_form_for(@professional) do |f| %>
        <%= f.error_notification %>

        <div class="form-register-wrapper">
          <%= f.input :full_name, label: 'Nome Completo' %>
          <%= f.input :birthday, label: 'Data de nascimento',
                      as: :date, start_year: Date.today.year,
                      end_year: Date.today.year - 100,
                      order: [:day, :month, :year] %>
          <%= f.input :sus_number, label: 'Registro SUS' %>
          <%= f.input :professional_number, label: 'Registro Profissional' %>
          <%= f.input :profession, label: 'Especialidade' %>
          <%= f.input :unit_cnes, label: 'CNES Unidade' %>
          <%= f.input :team_number, label: 'NÃºmero da equipe' %>
          <%= f.input :photo, as: :attachinary, label: 'Sua foto' %>


          <div class="form-actions">
            <%= f.submit 'Finalizar cadastro', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <!-- password has a specific page in devise to be changed? -->
      <!-- TODO: implement photo upload -->
  </div>
</div>
