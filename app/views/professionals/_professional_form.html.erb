<%= simple_form_for([@user, @professional]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :full_name, label: 'Nome completo' %>
    <%= f.input :birthday, label: 'Data de nascimento',
                as: :date, start_year: Date.today.year,
                end_year: Date.today.year - 100,
                order: [:day, :month, :year] %>
    <%= f.input :professional_number, label: 'Número do registro profissional' %>
    <%= f.input :sus_number, label: 'Número do SUS' %>
    <%= f.input :photo, as: :attachinary, label: 'Adicione/troque avatar' %>
    <%= f.submit "criar usuário", class: "btn btn-primary" %>

   </div>

<% end %>
